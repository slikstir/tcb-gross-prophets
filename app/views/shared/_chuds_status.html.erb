
<%= turbo_stream_from "#{dom_id(attendee)}_chuds_status" %>
<div id="<%= dom_id(attendee) %>_chuds_status" class="container mt-4">
  <div class="card bg-light p-4">
  <h2 class="text-center mb-3">Welcome Back, <%= attendee.name %></h2>

  <div class="row text-center">
    <div class="col-md-4">
      <div class="p-3 border rounded bg-light">
        <p class="text-muted mb-1">Level <%= attendee.level_index %></p>
        <h3><%= attendee.level_name %></h3>
      </div>
    </div>
    <div class="col-md-4">
      <div class="p-3 border rounded bg-light">
        <p class="text-muted mb-1">Performance Points</p>
        <h3><%= attendee.performance_points %></h3>
      </div>
    </div>
    <div class="col-md-4">
      <div class="p-3 border rounded bg-light">
        <p class="text-muted mb-1">Chud Balance</p>
        <h3 id="chuds-balance"><%= attendee.chuds_balance %></h3>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="progress" style="height: 20px;">
      <div class="progress-bar" role="progressbar" style="width: <%= attendee.level_percentage.to_i %>%;" aria-valuenow="<%= attendee.level_percentage %>" aria-valuemin="0" aria-valuemax="<%=  attendee.level_points[:next_level_points] %>"></div>
    </div>
    <p class="text-center mt-2 fw-bold"><%= attendee.level_points[:points_at_level] %>/<%=  attendee.level_points[:next_level_points] %></p>
  </div>
  </div>
</div>