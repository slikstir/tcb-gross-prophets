<%= turbo_stream_from 'timeline' %>

<div class="text-end">
	<%= link_to destroy_all_admin_activities_path, method: :delete, 
						data: { confirm: "This will purge all activities. Are you sure you want to do this?" }, 
						class: 'btn btn-danger' do %>
						<%= icon "x-circle", class: 'icon-text-white' %> Delete All Activities
	<% end %>
</div>

<div class="container mt-5 mb-5">
	<div class="row">
		<div class="col-md-8 offset-md-2">
		<h1>Latest Activities</h1>
			<ul class="timeline" id="timeline">
        <%= render_activities(@activities) %>
			</ul>
		</div>
	</div>
</div>



