<%== pagy_bootstrap_nav(@pagy) %>

<%= turbo_stream_from :orders %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Number</th>
        <th>Email</th>
        <th>Attendee</th>
        <th>Payment</th>
        <th>Fulfillment</th>
        <th>Fulfillable Items</th>
        <th>Total</th>
        <th style="width: 110px">Actions</th>
      </tr>
    </thead>
    <tbody id="orders">
      <% @orders.each do |order| %>
          <%= render 'row', order: order %>
      <% end %>
    </tbody>
  </table>
</div>

<%== pagy_bootstrap_nav(@pagy) %>