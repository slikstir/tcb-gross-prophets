<h1>Order Reports</h1>
<%= form_tag reports_admin_orders_path, method: :get do %>
  <div class="row mb-5">
    <div class='col-6 col-sm-4'>
      <%= label_tag "Start" %>
      <%= datetime_field_tag "start_time", params[:start_time] ||= Time.zone.now.beginning_of_day.strftime('%Y-%m-%dT%H:%M'), class: "form-control" %>
    </div>
    <div class='col-6 col-sm-4'>
      <%= label_tag "End" %>
      <%= datetime_field_tag "end_time", params[:end_time] ||= Time.zone.now.end_of_day.strftime('%Y-%m-%dT%H:%M'), class: "form-control" %>
    </div>
    <div class='col-12 col-sm-4'>
      <%= submit_tag "Report", class: "btn btn-primary w-100 mt-4" %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-6 mb-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
            Total Sales
        </h3>
      </div>
      <div class="card-body">
        <table class='table'>
          <thead>
            <tr>
              <th>Currency</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
          <% @total_sales.each do |key, val| %>
            <tr>
              <td><%= key.upcase %></td>
              <td><%= number_to_currency val, unit: currency_icon(key) %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-sm-6 mb-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
            Total Commissions
        </h3>
      </div>
      <div class="card-body">
        <p class="card-text">Total sales for the selected period.</p>
        <h4 class="text-success">
          <%= number_to_currency @sales_total, unit: currency_icon(@currency) %>
        </h4>
      </div>
    </div>
  </div>

  <div class="col-sm-6 mb-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
            Total Product Sales
        </h3>
      </div>
      <div class="card-body">
        <p class="card-text">Total sales for the selected period.</p>
        <h4 class="text-success">
          <%= number_to_currency @sales_total, unit: currency_icon(@currency) %>
        </h4>
      </div>
    </div>
  </div>
</div>