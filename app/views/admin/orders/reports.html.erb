<h1>Order Reports</h1>
<%= form_tag reports_admin_orders_path, method: :get, id: "order-report-form" do %>
 <div class="row mb-5">
    <div class='col'>
      <%= label_tag "Start" %>
      <%= datetime_field_tag "start_datetime_local",  params[:start_time] ||= Time.zone.now.beginning_of_day.strftime('%Y-%m-%dT%H:%M'), class: "form-control" %>
      <input type="hidden" name="start_datetime" id="start_datetime">
    </div>
    <div class='col'>
      <%= label_tag "End" %>
      <%= datetime_field_tag "end_datetime_local",  params[:end_time] ||= Time.zone.now.end_of_day.strftime('%Y-%m-%dT%H:%M'), class: "form-control" %>
      <input type="hidden" name="end_datetime" id="end_datetime">
    </div>
    <div class='col'>
      <input type="hidden" name="time_zone" id="time_zone">
      <%= submit_tag "Report", class: "btn btn-primary w-100 mt-4" %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-6 mb-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
            Total Sales
        </h3>
      </div>
      <div class="card-body">
        <table class='table'>
          <thead>
            <tr>
              <th>Currency</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
          <% @total_sales.each do |key, val| %>
            <tr>
              <td><%= key.upcase %></td>
              <td><%= number_to_currency val, unit: currency_icon(key) %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-sm-6 mb-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
            Total Commissions
        </h3>
      </div>
      <div class="card-body">
       <table class='table'>
          <thead>
            <tr>
              <th>Performer</th>
              <th>Currency</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
          <% @total_commissions.each do |key, val| %>
            <tr>
              <td><%= Performer.find(key[0]).name %></td>
              <td><%= key[1].upcase %></td>
              <td><%= number_to_currency val, unit: currency_icon(key[1]) %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-sm-6 mb-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
            Total Product Sales
        </h3>
      </div>
     <div class="card-body">
       <table class='table'>
          <thead>
            <tr>
              <th>Product</th>
              <th>Currency</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
          <% @total_product_sales.each do |key, val| %>
            <tr>
              <td><%= key[0] %></td>
              <td><%= key[1].upcase %></td>
              <td><%= number_to_currency val, unit: currency_icon(key[1]) %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>