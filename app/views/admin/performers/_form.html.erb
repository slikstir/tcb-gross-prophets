<div class="col-12 col-md-6">
  <%= bootstrap_form_with(model: [:admin, @performer], local: true) do |form| %>

    <%= form.text_field :name %>
    <%= form.number_field :performance_points %>
    <%= form.select :active, [["Yes", true], ["No", false]] %>

    <div class="actions">
      <%= form.submit nil, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>