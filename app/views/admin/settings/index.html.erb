<h1>Settings</h1>

<table class="table mb-5">
  <thead>
    <tr>
      <th scope="col">Setting</th>
      <th scope="col">Description</th>
      <th scope="col">Type</th>
      <th scope="col">Value</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <% @settings.each do |setting| %>
    <tr>
      <td><%= setting.name %><br>
          <i><%= setting.code %></i></td>
      <td><%= setting.description %></td>
      <td><%= setting.value_type %></td>
      <td><%= setting.value %></td>
      <td>
        <%= link_to "Edit", edit_admin_setting_path(setting), class: "btn btn-primary" %>
      </td>
    </tr>
  <% end %>
</table>

<h2>Performance Points and their Levels</h2>
<p>These are currently only editable via code</p>
<table class="table table-condensed">
  <thead>
  <tr>
    <th>Level</th>
    <th>Points</th>
    <th>Name</th>
  </tr>
  </thead>
  <tbody>
    <% Attendee::LEVELS.each do |points, level| %>
      <tr>
        <td><%= level[:index] %></td>
        <td><%= points %></td>
        <td><%= level[:name] %></td>
      </tr>
    <% end %>
  </tbody>
</table>