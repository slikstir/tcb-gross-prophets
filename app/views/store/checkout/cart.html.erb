<% if @admin_mode && @cart.present? %>
  <div class="container my-5">
    <h1>Admin Mode</h1>
    <%= link_to "Generate QR", store_qr_path(order_id: @cart.id), class: "btn btn-primary btn-lg w-100" %>
  </div>
<% end %>


<%= render 'shared/cart', order_channel: 'merch_table' %>

<% if @admin_mode && @cart.present? %>
  <div class="container my-5">
      <%= link_to "Pay with Cash", store_pay_cash_path(order_id: @cart.id), method: :post, data: {confirm: "Are you sure you want to do this?"}, class: "btn btn-success btn-lg w-100" %>
  </div>
<% end %>
